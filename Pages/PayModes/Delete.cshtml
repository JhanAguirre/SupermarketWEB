@page
@model SupermarketWEB.Pages.PayModes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Método de Pago";
}

<h1>Eliminar Método de Pago</h1>

<div class="alert alert-danger">
    <h3>¿Está seguro que desea eliminar este método de pago?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.PayMode.Name
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.PayMode.Description
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PayMode.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>