@page
@model SupermarketWEB.Pages.Products.DeleteModel

<h1>Eliminar Producto</h1>

<h3>¿Está seguro que desea eliminar este producto?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Product.Price.ToString("C")</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Product.Stock</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Product.Category?.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
