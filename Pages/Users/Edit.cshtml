@page
@model SupermarketWEB.Pages.Users.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Editar Usuario</h2>
            <hr />
            <form method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="User.Id" />

                <div class="form-floating mb-3">
                    <input asp-for="User.Email" class="form-control" placeholder="Email" type="email" />
                    <label asp-for="User.Email">Correo Electrónico</label>
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="User.Password" class="form-control" type="password" placeholder="Nueva Contraseña" />
                    <label asp-for="User.Password">Nueva Contraseña</label>
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-block mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}