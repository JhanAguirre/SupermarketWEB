@page
@model SupermarketWEB.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Eliminar Usuario</h2>
            <div class="alert alert-danger mt-4">
                <h5>¿Está seguro de que desea eliminar este usuario?</h5>
            </div>

            <div class="border p-3 mt-4">
                <div class="mb-3">
                    <label class="form-label">Correo Electrónico:</label>
                    <input class="form-control" value="@Model.User.Email" disabled />
                </div>

                <form method="post">
                    <input type="hidden" asp-for="User.Id" />
                    <div class="d-grid gap-2 d-md-block mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>