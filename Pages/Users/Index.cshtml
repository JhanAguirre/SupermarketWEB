@page
@model SupermarketWEB.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Account/Register" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear Nuevo Usuario
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>