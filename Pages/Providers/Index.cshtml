@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Proveedores";
}
<div class="container p-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Proveedores</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear Nuevo Proveedor
            </a>
        </div>
    </div>
    @if (Model.Providers != null && Model.Providers.Any())
    {
        <table class="table table-bordered table-striped table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Providers[0].Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Providers[0].Document)</th>
                    <th>@Html.DisplayNameFor(m => m.Providers[0].Email)</th>
                    <th>@Html.DisplayNameFor(m => m.Providers[0].DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(m => m.Providers[0].Age)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var provider in Model.Providers)
                {
                    <tr>
                        <td>@provider.Name</td>
                        <td>@provider.Document</td>
                        <td>@provider.Email</td>
                        <td>@provider.DateOfBirth.ToShortDateString()</td>
                        <td>@provider.Age años</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@provider.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@provider.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            No hay proveedores registrados. ¡Comienza agregando uno nuevo!
        </div>
    }
</div>